{
  "name": "worldcore",
  "version": "1.0.0",
  "private": true,
  "main": "../dist/worldcore/index.js",
  "types": "../dist/worldcore/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node -e \"process.env.WORLDCORE_TEST='1'; const { spawnSync } = require('node:child_process'); const r = spawnSync(process.execPath, ['--test','../dist/worldcore/test'], { stdio: 'inherit', env: process.env }); process.exit(r.status ?? 1);\"",
    "sim:brain": "npm run build && node ../dist/worldcore/tools/simBrain.js",
    "audit:npcs": "npm run build && node ../dist/worldcore/tools/auditNpcLawTags.js",
    "registry:check": "node tools/registryCheck.js --mode=worktree",
    "registry:ci": "node tools/registryCheck.js --mode=ci",
    "registry:audit": "node tools/registryCheck.js --mode=all",
    "audit:seed:npc-lawtags": "npm run build && node ../dist/worldcore/tools/seedNpcLawTagsAudit.js",
    "verify": "npm run test && npm run audit:seed:npc-lawtags"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0",
    "redis": "^4.6.14",
    "uuid": "^13.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/pg": "^8.10.0",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "typescript": "^5.6.3"
  }
}
