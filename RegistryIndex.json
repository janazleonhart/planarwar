{
  "notes": [
    "Index of per-package registries. Each package owns its own registry to keep scope sane.",
    "WorldCoreRegistry.json remains authoritative for the worldcore/ package only."
  ],
  "registries": [
    {
      "kind": "code_registry",
      "notes": [
        "Tracks services/models/tests/tools under worldcore/."
      ],
      "path": "worldcore/WorldCoreRegistry.json",
      "scope": "worldcore"
    },
    {
      "kind": "code_registry",
      "notes": [
        "HTTP API + admin tools for the web layer."
      ],
      "path": "web-backend/WebBackendRegistry.json",
      "scope": "web-backend"
    },
    {
      "kind": "code_registry",
      "notes": [
        "React/Vite frontend including admin pages."
      ],
      "path": "web-frontend/WebFrontendRegistry.json",
      "scope": "web-frontend"
    },
    {
      "kind": "code_registry",
      "notes": [
        "WebSocket shard server."
      ],
      "path": "mmo-backend/MmoBackendRegistry.json",
      "scope": "mmo-backend"
    },
    {
      "kind": "ops_registry",
      "notes": [
        "GitHub workflows and repo automation metadata."
      ],
      "path": ".github/GithubRegistry.json",
      "scope": "github"
    }
  ],
  "registryVersion": "1.0",
  "root": "."
}
